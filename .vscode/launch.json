    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "requireExactSource": true, 
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Tutorial/bin/Debug/net6.0/Tutorial.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Tutorial",
            "stopAtEntry": false,
            "justMyCode": false,
            "enableStepFiltering": true,
            "console": "internalConsole"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}